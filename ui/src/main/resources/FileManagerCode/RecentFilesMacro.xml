{{velocity output="false"}}
## Arrange paths: keep only folders names and reverse them.
#macro(getFileFolders $fileDoc)
  #getFilePaths($fileDoc $paths)
  #set ($folders = [])
  #if ($paths.length &gt; 0)
    #foreach ($path in $paths[0])
      #if ($path != 'WebHome')
        #set ($discard = $folders.add($path))
      #end
    #end
  #end
  #set ($discard = $collectiontool.reverse($folders))
  #set ($folders = $stringtool.join($folders, ' / '))
#end

#macro (resolveDriveReference $return)
  #if ("$!xcontext.macro.params.drive" != '')
    #set ($driveReference = $services.model.resolveDocument($xcontext.macro.params.drive))
  #else
    #getDriveReference($driveReference)
    #if (!$xwiki.getDocument($driveReference).getObject('FileManagerCode.DriveClass'))
      #set ($driveReference = $services.model.resolveDocument('FileManager.WebHome'))
    #end
  #end
  #set ($return = $NULL)
  #setVariable("$return" $driveReference)
#end
{{/velocity}}

{{velocity}}
#set ($discard = $xwiki.ssx.use('FileManagerCode.RecentFilesMacro'))
#resolveDriveReference($driveReference)
#set ($statement = 'from doc.object(FileManagerCode.FileClass) as file ' +
  'where doc.space = :space order by doc.creationDate desc')
#set ($fetchLimit = 100)
#set ($viewLimit = $numbertool.toNumber($xcontext.macro.params.limit).intValue())
#if (!$viewLimit || $viewLimit &lt; 1)
  #set ($viewLimit = 5)
#end
## We retrieve the most recent $fetchLimit files and then list the fist $viewLimit files the current user can view.
#set ($results = $services.query.xwql($statement).bindValue('space',
  $services.model.serialize($driveReference.parent, 'local')).setLimit($fetchLimit).execute())
(% class="filemanager-recent" %)
#set ($i = 0)
#foreach($result in $results)
  #set ($fileDoc = $xwiki.getDocument($result))
  #if ($fileDoc)
    #getFile($fileDoc $file)
    #getFileFolders($fileDoc)
    #set ($fileUrl = $fileDoc.getURL('view'))
    #set ($creatorUrl = $xwiki.getDocument($file.creator).getURL('view'))
    * {{html clean='false'}}
      #mimetypeimg($file.mediaType.toLowerCase() $file.name.toLowerCase())
      &lt;a href="$fileUrl" title="$escapetool.xml($folders)"&gt;$escapetool.xml($file.name)&lt;/a&gt;
      &lt;span&gt;$escapetool.xml($services.localization.render('fileManager.recentFiles.creator'))&lt;/span&gt;
      &lt;a href="$creatorUrl"&gt;$xwiki.getUserName($file.creator, false)&lt;/a&gt;
      &lt;span&gt;
        $escapetool.xml($services.localization.render(
          'fileManager.recentFiles.creationDate', [$xwiki.formatDate($file.creationDate)]))
      &lt;/span&gt;
    {{/html}}
    #set ($i = $i + 1)
    #if ($i &gt;= $viewLimit)
      #break
    #end
  #end
#end
#if ($i == 0)
  * {{translation key="fileManager.recentFiles.noFiles"/}}
  #if ($services.security.authorization.hasAccess('edit', $driveReference.parent))
    * [[{{translation key="fileManager.recentFiles.addFiles"/}}&gt;&gt;$driveReference||queryString="#?driveNode=$escapetool.url($driveReference.name)"]]
  #end
#else
  * [[{{translation key="fileManager.recentFiles.seeAllFiles"/}}&gt;&gt;$driveReference||queryString="#?driveNode=%2FallFiles"]]
#end
{{/velocity}}</code>
